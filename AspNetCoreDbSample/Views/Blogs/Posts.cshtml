@model IEnumerable<AspNetCoreDbSample.Models.Entities.Post>

<h1>@ViewData["Title"]</h1>


@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card mb-3 text-center">
            <h4 class="card-header ">@item.Title</h4>
            <div class="card-body">
                <div class="card-text">
                    <strong>@item.Date.ToShortDateString()</strong>
                </div>
                <div class="card-text">
                    <div class="row">
                        <div class="col">
                            @item.Content
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <p class="text-center">No posts in this blog.</p>
}
